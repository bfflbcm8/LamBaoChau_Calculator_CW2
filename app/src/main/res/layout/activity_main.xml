<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:layout_margin="15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textview_Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textEnd"

        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_numbers"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/bt_layoutall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="#949FA5"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_Division"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#03A9F4"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_Multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#03A9F4"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_Subtract"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#03A9F4"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#F80202"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="32dp"

                />

            <Button
                android:id="@+id/bt_Result"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FF9800"
                android:text="="
                android:textColor="@color/white"
                android:textSize="45dp"

                />

            <Button
                android:id="@+id/bt_Sum"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#03A9F4"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40dp" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>